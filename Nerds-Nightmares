    bowzerImage = function(x, y, w, h) {
    
    pushMatrix();
    
    translate(x, y);
    scale(w / 100, h / 100);
    
    punchClove(239 - punchMode, 233 - b.moving);
    
    // shoes
    fill(227, 174, 41);
    arc(225, 275 + b.moving - 10, 50, 26, -127, -106);
    arc(218, 275 + b.moving - 10, 50, 26, -121, -98);
