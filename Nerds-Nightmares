    cloud(- 100 + frameCount % 750, 56 + sin(frameCount * 5) * 5, 50);
        
    cloud(- 300 + frameCount % 500 * 2, 102 + sin(frameCount * 7) * 6, 50);
        
    
    // ground
    fill(92, 41, 5);
    rect(0, 334, 600, 89);
    
    // dirt level 2
    pushMatrix();
