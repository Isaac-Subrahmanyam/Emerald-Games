    arc(225 - 22, 275 - b.moving - 10, 50, 26, -127, -106);
    arc(218 - 22, 275 - b.moving - 10, 50, 26, -121, -98);
    arc(211 - 22, 275 - b.moving - 10, 50, 26, -113, -93);
    
    
