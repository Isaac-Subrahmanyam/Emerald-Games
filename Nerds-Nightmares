            healthBar(v, vaderFace, 354, 0);
            vader();
        }
        
        if(battleType === "bowzer")
        {
            healthBar(b, bowzerFace, 354, 0);
            bowzer();
        }
        
        if(battleType === "dalek")
        {
            healthBar(d, dalekFace, 354, 0);
            dalek();
        }
        
        if(battleType === "picka")
        {
            healthBar(pk, pickaFace, 354, 0);
            pickachu();
        }
        
        healthBar(p, playerFace, 0, 0);
        player();
    },
    
